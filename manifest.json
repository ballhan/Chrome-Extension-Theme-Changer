{
    "manifest_version": 2,
    "name": "Theme Changer",
    "description": "Change browser theme",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Change theme"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ],
    "permissions": ["tabs"]
}
